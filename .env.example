# Telegram Configuration
BOT_TOKEN=your_bot_token_here
CHANNEL_ID=@your_channel_or_chat_id
TEST_CHANNEL_ID=@your_test_channel_or_chat_id  # Optional: for test channel
ADMIN_USERNAME=MasihSadri

# API Keys (Optional - for fallback when crawlers fail)
# Navasan: http://api.navasan.tech/latest/?api_key=YOUR_KEY
NAVASAN_API_KEY=your_navasan_api_key  # Optional, used as fallback when crawlers fail

# Avalai API (Optional - for AI market analysis)
AVALAI_KEY=your_avalai_api_key  # Optional, for AI-powered market analysis

# HTTP Settings (in seconds)
HTTP_TIMEOUT_SECONDS=10

# Cache Settings (in minutes)
# Note: Post interval is automatically calculated as the minimum of all cache TTLs and crawler intervals
NAVASAN_CACHE_MINUTES=28
WALLEX_CACHE_MINUTES=15

# Crawler Settings (Web scrapers for price data)
CRAWLER1_URL=https://www.bonbast.com/
CRAWLER1_INTERVAL_MINUTES=37
CRAWLER2_URL=https://alanchand.com/
CRAWLER2_INTERVAL_MINUTES=43

# Announcement Thresholds (% vs last announced) - Consolidated thresholds
# Currency thresholds apply to both USD and EUR
MARGIN_CURRENCY_UPPER_PCT=1.0  # Currency (USD/EUR) price increase threshold
MARGIN_CURRENCY_LOWER_PCT=2.0  # Currency (USD/EUR) price decrease threshold
MARGIN_GOLD_UPPER_PCT=1.0      # Gold price increase threshold
MARGIN_GOLD_LOWER_PCT=2.0      # Gold price decrease threshold

# Language Settings
DEFAULT_LANGUAGE=fa  # fa = Persian (فارسی), en = English

# Persistence
LAST_STATE_FILE=./data/last_state.json

# Logging (Optional - for server deployment)
LOG_FILE=./logs/bot.log
